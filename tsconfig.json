{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "CommonJS",
    "outDir": "./",
    "rootDir": "./src",
    "sourceMap": false,
    "strict": true,
    "target": "ES2020",
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "exclude": ["./node_modules/*", "./*.cjs"]
}
